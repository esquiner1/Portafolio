---
import '@fontsource-variable/onest'
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import '../styles/global.css'
import Analytics from '../components/Analytics.astro';
---

<!doctype html>
<html lang="en">
	<head>

		<!-- Google Tag Manager -->
	<script>
	(function(w,d,s,l,i){
		(w as any)[l]=(w as any)[l]||[]; 
		(w as any)[l].push({'gtm.start':new Date().getTime(),event:'gtm.js'});
		
		var f = d.getElementsByTagName(s)[0],
		j= d.createElement(s) as HTMLScriptElement;
		var dl=l!='dataLayer'?'&l='+l:'';
		
		j.async=true;
		j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;

		if(f && f.parentNode){
			f.parentNode.insertBefore(j,f);
		}
	})(window,document,'script','dataLayer','GTM-52BZFBD2');
	</script>
	<!-- End Google Tag Manager -->

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/cpu.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title}</title>
	</head>
	<body>
		<Analytics/>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe src="https://www.googletagmanager.com/ns.html?id=GTM-52BZFBD2"
				height="0" width="0" style="display:none;visibility:hidden">
			</iframe>
		</noscript>
	<!-- End Google Tag Manager (noscript) -->


		<div 
			class="fixed top-0 z-[-2] h-screen w-screen bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]">
		</div>
		<Header/>
		<slot/>
		<Footer/>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	html{
		font-family: 'Onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		background: #050505;
		color: #fff;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		margin: 0;
		width: 100%;
		height: 100%;
	}

	@media (prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>

<script src="/node_modules/flowbite/dist/flowbite.min.js" defer></script>
